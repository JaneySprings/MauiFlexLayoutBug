<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiApp.MainPage">

    <!-- Main container -->
    <StackLayout Orientation="Vertical">
        <!-- First container -->
        <FlexLayout AlignItems="Center" Direction="Row" JustifyContent="Start"
                    AlignContent="Start" Wrap="Wrap">
            
            <Label Text="Hello" FlexLayout.Shrink="0"/>
            <BoxView WidthRequest="100" HeightRequest="50"
                     FlexLayout.Shrink="0" BackgroundColor="Red"/>
            <Label Text="element" FlexLayout.Shrink="0"/>
        
        </FlexLayout>
        <!-- Second container -->
        <FlexLayout AlignItems="Center" Direction="Row" JustifyContent="Start"
                    AlignContent="Start" Wrap="Wrap">
        
            <Label Text="Hi" FlexLayout.Shrink="0"/>
            <BoxView WidthRequest="100" HeightRequest="50" 
                     FlexLayout.Shrink="0" BackgroundColor="Green"/>
            <Label Text="Control" FlexLayout.Shrink="0"/>
        
        </FlexLayout>
    </StackLayout>
</ContentPage>
